.Configuration
    column(1/3, gutter: 0)
    &:hover
        background palette('Grey', 'a50')

    &__Header
        border-bottom 1px solid palette('Grey', 'a150')
        padding 10px 20px

    &__Parameters
        padding 10px 20px

    &__Title, &__IconEditable
        display inline-block
        vertical-align middle

    &__IconEditable
        size(30px, 30px)
        margin-left 15px
